
@{
    ViewBag.Title = "JoinHousehold";
}

<h2>JoinHousehold</h2>

<center>
    <h2>Create a House Hold</h2>

    <br />

    @using (Html.BeginForm("Create", "HouseHolds", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input name="Name" placeholder="Name" class="form-control" />
        <br />
        <input name="Description" placeholder="Description" class="form-control" />
        <br />
        <input type="submit" class="btn btn-default" style="background-color:orange" value="Create" />
    }

</center>   