@{
    ViewBag.Title = "Home Page";
}
 @if (!User.Identity.IsAuthenticated)
 {
   <H2>Please Log In To Begin Your Simple Budget!</H2>
 }
 else
 {
     <div class="container">
         <div class=" row">
             <div class="col-lg-12">
     <h2>Welcome @ViewBag.FullName! , To Your Personalized SimpleBudget!</h2>
    
                 </div>
             </div>
         <div class="row">
             <div class="col-xs-6">
                 <h4>My Accounts</h4>

                
                 @*{
                    <a href="@Url.Action("Create","Accounts")" ><p>Please Create An Account!</p></a>
                 }
                 else
                 {*@

                    @foreach (var account in Model.Account.Where(u => u.HouseholdId == u.HouseHold.Id))
                    {
                        <div>@account.Name <span>@account.AccountType </span><span> @account.Balance</span></div>



                

                 }
              
                </div>       
    


             <div class="col-xs-6">
