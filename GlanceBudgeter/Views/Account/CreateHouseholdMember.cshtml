
@{
    ViewBag.Title = "CreateHouseholdMember";
}

<h2>Invite A Household Memeber</h2>

<center>

    @using (Html.BeginForm("CreateHouseholdMember", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        

            <h3><b>Please enter the desired Email, Name, of the user you wish to invite.</b></h3>
            <p> Once the user accepts the invite and sets their password they can change their name as well as a profile pic in the profile settings </p>
            <br />

            <p>(NOTE: You will not be able to change the email, so please check to make sure the information is correct)</p>

            <input type="email" name="Email" placeholder="Email" style="width:300px;height:40px;text-align:center;border-radius:5px" />
            <br />
            <br />
            <input type="text" name="FirstName" placeholder="First Name" style="width:300px;height:40px;text-align:center;border-radius:5px" />
            <br />
            <br />
            <input type="text" name="LastName" placeholder="Last Name" style="width:300px;height:40px;text-align:center;border-radius:5px" />
            <br />
            <br />
            @*<div class="form-group">
            
                <div class="col-md-10">
                    <input type="file" name="Upload Your Profile Pic" class=" form-control" />
                </div>
            </div>*@

            <input type="submit" class="btn btn-default" style="background-color:orange;color:white" value="Send" />
    }

</center>